{% extends 'header.html.twig' %}

{% block content %}
    <main class="container">

        <fieldset class="text-center">
            <h2 class="mt-4">Create an Event</h2>

            <div id="js-errors" class="text-danger"></div>

            <form id="creation-form">
                <div class="form-group row">
                    <label for="event-title" class="col-sm-2 col-form-label text-right">Event Title:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="event-title" placeholder="Enter Title" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="event-description" class="col-sm-2 col-form-label text-right">Event Description:</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" rows="5" id="event-description" placeholder="Enter Description"></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="event-type" class="col-sm-2 col-form-label text-right">Event Type:</label>
                    <div class="col-sm-10">
                        <select id="types" class="form-control" data-role="select-dropdown">
                            {% for type_name in types %}
                                <option value="{{ type_name }}">{{ type_name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <!-- datetime-local is not implemented in Firefox! -->
                <div class="form-group row">
                    <label for="event-time-start" class="col-sm-2 col-form-label text-right">Event Start Time:</label>
                    <div class="col-sm-10">
                        <input type="datetime-local" class="form-control" id="event-time-start" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="event-time-end" class="col-sm-2 col-form-label text-right">Event End Time:</label>
                    <div class="col-sm-10">
                        <input type="datetime-local" class="form-control" id="event-time-end" required>
                    </div>
                </div>

                <input type="button" class="btn btn-primary" id="create-button" value="Create">

                <div class="mt-3">
                    <p>Go back <a href={{ home_path }}>home</a>.</p>
                </div>

            </form>

        </fieldset>



    </main>

    <script type="module" src="{{ js_path }}"></script>

    <!-- Bootstrap necessary js plugins for dropdown menu -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

{% endblock %}